<?xml version="1.0" encoding="utf-8"?>
<layout>


    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/trans_wrapper"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <ImageView
            android:id="@+id/payment_status_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"

            android:layout_marginTop="10dp"
            android:background="@drawable/successful_icon"
            android:backgroundTintMode="multiply"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/trans_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/poppinsmedium"
            android:text="Ireoluwa Onafeso"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintEnd_toStartOf="@+id/trans_amount"
            app:layout_constraintStart_toEndOf="@+id/payment_status_image"
            app:layout_constraintTop_toTopOf="@+id/payment_status_image" />

        <TextView
            android:id="@+id/trans_time_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/poppinsregular"
            android:text="6:04 PM • Bank Transfer"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/trans_name"
            app:layout_constraintTop_toBottomOf="@+id/trans_name" />

        <TextView
            android:id="@+id/trans_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/poppinsmedium"
            android:text="₦4,837.28"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/trans_name" />

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="16dp"
            android:background="#AEE1E7EB"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/payment_status_image"
            app:layout_constraintTop_toBottomOf="@+id/payment_status_image" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
